
<div class="container-fuid soon bg-soon relative">

                <img src="{{settings.bg-img-soon | img_url:'master'}}" class="img-responsive  " alt="" /> 
    <div class="header-soon absolute ">
 <div class="container header-v4">
       <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 logo_header ">
        <a href="{{shop.url}}" class="">
          {% if settings.soon_logo == blank %}
          <img alt="{{shop.name}}" src="{{'logo.png' | asset_url}}" class="img-logo inline-block">
          {% else %}
          <img alt="{{shop.name}}" src="{{settings.soon_logo | img_url:'master'}}" class="img-logo inline-block">
          {% endif %}
        </a>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 text-right icon-main">
        <a href="#" class="delay03 inline-block" id="btn-search">
          {% if settings.icon-search == blank %}
          <i class="icon-magnifier"></i>
          {% else %}
          <i class="{{ settings.icon-search }}"></i>
          {% endif %}
        </a>
        {% if customer.email != blank %}
        <a class="delay03 inline-block hidden-sm hidden-xs" href="/account/logout" title="logout">
          {% if settings.icon-logout == blank %}
          <i class="icon-power"></i>
          {% else %}
          <i class="{{ settings.icon-logout }}"></i>
          {% endif %}
        </a>
        {% else %}
        <a href="#login_form" class="delay03 inline-block hidden-sm hidden-xs" id="btn-login">
          {% if settings.icon-login == blank %}
          <i class="zoa-icon-user"></i>
          {% else %}
          <i class="{{ settings.icon-login }}"></i>
          {% endif %}
        </a>
        {% endif %}
        <a href="#" class="delay03 relative inline-block text-center icon-cart" id="btn-cart">
          {% if settings.icon-cart == blank %}
          <i class="icon-bag"></i>
          {% else %}
          <i class="{{ settings.icon-cart }}"></i>
          {% endif %}
          <figure class="absolute label-cart enj-cartcount">{{ cart.item_count }}</figure>
        </a>
        
      </div>
</div>
  </div>
    <div class="content-soon absolute ">
<div class="container ">
    <div class=" col-sm-6 col-md-6 col-xs-8">
        <h1 class="soon-title space_bot_40">{{page.title}}</h1>
      <h4 class=" space_bot_70 content">{{settings.soon_content}}</h4>
              <form action="{{ form_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank"  class="subscible-form relative">
            <input class="engoc-input-form" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{settings.soon_placeholder}}" name="EMAIL" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
            <button type="submit" class="uppercase  absolute"  name="subscribe">{{settings.soon_btn_name}}</button>
        </form>
    </div>
</div>
</div>
</div>


