<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <!--slide-->
  <div class=" slider-blog-clean">
    <div class="container">
      <div class="border-bot">
        <div class="row">
          <div class="col-md-4 col-sm-12 col-xs-12 ciloe-title-section2 margin_bottom_20 container relative">
            <p class="fz-12 space_bot_30 uppercase fw-500">{{section.settings.des}}</p>
            <h1 class="margin_bottom_20">{{section.settings.title}}</h1> 	
          </div>
          <div class="col-md-8 col-sm-12 col-xs-12 ">
            <div class="js-slider-blog2 row">
              {% assign products_limit = section.settings.limit %}
              {% assign col = section.settings.blog %}
              {% for article in blogs[col].articles limit: products_limit %}
              <div class="content-blog v2">
                <div class="blog-post-item ">
                  {% if article.image %}
                  <div class="blog-img inline-block">
                    <a href="{{ article.url }}" class="hover-images">{{ article | img_url: 'master' | img_tag: article.title }}</a>
                  </div>
                  {% endif %}
                  <div class="blog-info-bd">
                    <div class="blog-info">
                      <div class="blog-post-tags blog-post-author">
                        {% for tag in article.tags %}
                        <a class="uppercase fz-12 author margin_top_10" href="{{ blog.url }}/tagged/{{ tag | handle }}" rel="category tag">{{ tag }}</a>{% unless forloop.last %},{% endunless %}
                        {% endfor %}
                      </div>
                      <h3 class="blog-post-title margin_bottom_10"><a href="{{ article.url }}">{{ article.title }}</a></h3>
                      <div class="blog-post-desc ">
                        {{article.excerpt | strip_html | strip_newlines | truncatewords: 13}}
                      </div>
                      <a href="{{ article.url }}" class="button-blog ">{{section.settings.btn_blog}}</a> 
                    </div>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--endslide-->
</div>
<style>
 .slider-blog-clean .border-bot {
    border-bottom: 1px solid #f5f5f5;
}
    @media (min-width:1025px){
    .ciloe-title-section2{
     padding-left:85px;
    }
   .ciloe-title-section2 h1{
    line-height: 60px;
  }
    }
    .ciloe-title-section2 p {
  	color:#cecece;
  }
  .ciloe-title-section2 h1{
  	color:{{section.settings.color_title}};
    max-width:400px;
    text-transform: inherit;
  }
  .blog-post-title a{
  	font-size:16px;
  }
    @media (max-width:767px){
     .slider-blog-clean .blog-post-item{
       padding-bottom:0;
      }
    }
  .slider-blog-clean{
    padding:50px 0;
  }
  @media (min-width:1025px){
    .slider-blog-clean .content-blog.v2 .blog-info{
    height:238px;      
  }
      .slider-blog-clean{
    padding:100px 0;
  }
  }
  .slider-blog-clean .title-blog{
  	font-size:30px;
    margin-bottom:30px;
  }
  .slider-blog-clean .des-blog{
    margin-bottom:65px;
    color:{{section.settings.color_des_blog}};
  }
  .slider-blog-clean .button-blog {
    font-weight: 500;
    color: #cfcfcf;
    letter-spacing: 0.5px;
}
  .slider-blog-clean .content-blog.v2 .blog-info .blog-post-title{
  	font-size:16px;
    font-weight:600;
  }
  .slider-blog-clean .content-blog.v2 .blog-info .blog-post-desc{
  	margin-bottom:20px;
  }
  .slider-blog-clean .content-blog.v2 img{
  	min-height:270px;
    object-fit:cover;
  }
  .slider-blog-clean .content-blog.v2 a.over-hidden img{
    transition:all .3s ease;
  }
  .slider-blog-clean .content-blog.v2 a.over-hidden img:hover{
  	transform: scale(1.2);
  }
  .slider-blog-clean .content-blog.v2 .title-post{
  	font-size:20px;
    font-weight:400;
  }
  .slider-blog-clean .content-blog.v2 .day-post{
  	font-size:12px;
    font-weight:500;
    color:{{section.settings.color_day_post}};
    margin:20px 0;
  }
  .slider-blog-clean .js-slider-blog2 .slick-slide{
  	margin:0 15px;
  }
  .slider-blog-clean .js-slider-blog2 .slick-prev{
  	left:-5%;
    opacity:0;
    transition:all .5s ease;
  }
  .slider-blog-clean .js-slider-blog2 .slick-next{
  	right:-5%;
    opacity:0;
    transition:all .8s ease;
  }
  .slider-blog-clean:hover .js-slider-blog2 .slick-prev{
  	left:-10%;
    opacity:1;
  }
  .slider-blog-clean:hover .js-slider-blog2 .slick-next{
  	right:-10%;
    opacity:1;
  }
</style>

{% schema %}
{
  "name": "Blog v2",
  "settings": [
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
	{
      "type": "color",
      "id": "color_title",
      "label": "Color Title",
      "default": "#0D4C82"
    },
    {
      "type": "textarea",
      "id": "des",
      "label": "Title top",
      "default": "latest news"
    },
	{
        	"type": "text",
        	"id": "title",
        	"label": "Title Mid",
        	"default": "From Our Blog"
    },
    {
      "type": "text",
      "id": "btn_blog",
      "label": "Button ",
      "default": "Read More"
    },
	{
        	"type": "blog",
        	"id": "blog",
        	"label": "Chose Blog"
    },
	{
        	"type": "text",
        	"id": "limit",
        	"label": "Limit Blog",
        	"default": "2"
    },
	{
      "type": "url",
      "id": "url",
      "label": "URL button"
    },
    {
      "type": "color",
      "id": "color_day_post",
      "label": "Color Day blog",
      "default": "#fcfcfc"
    },
    {
      "type": "color",
      "id": "color_des_blog",
      "label": "Color Description blog",
      "default": "#666666"
    }
  ],
  "presets": [
    {
      "name": "Blog v2",
      "category": "Page Minim"
    }
  ]
}
{% endschema %}