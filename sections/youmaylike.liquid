<div data-section-id="{{ section.id }}" data-section-type="youmaylike" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
	<!--wrapper product-->
  <div class="more-product bg-gradient bg-insinde">
      <div class="container container-240">
          <div class="h-heading">
              <div class="title-icon t-inline">
                  <img src="{{'iconbs.png'|asset_url}}" alt="">
                  <h3>{{section.settings.text1}}</h3>
              </div>
              <a href="{{section.settings.btn_url}}" class="btn-morepd">
                  <span><i class="{{section.settings.btn_icon}}"></i></span>{{section.settings.btn_name}}
              </a>
          </div>
          <div class="multiple-row js-multiple-row">
              {%for product in collections[section.settings.product_collection].products limit:section.settings.product_limit%}

                  {% include 'product-grid-18' %}
                      {% else %} 
                  {% include 'empty-product-grid-18'%}
                {% endfor %}
          </div>
      </div>
  </div>
<!--end wrapper product-->
</div>  
{% schema %}
{
  "name": "You May Like",
  "class": "index-section",
  "settings": [
	{
      "type": "header",
      "content": "Heading"
    },
	{
      "type": "text",
      "id": "text1",
      "label": "Title",
      "default": "You may like"
    },
	{
      "type":"header",
      "content":"Button"
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "Title button",
      "default": "Load more"
    },
	{
      "type": "url",
      "id": "btn_url",
      "label": "URL"
    },
	{
      "type":"header",
      "content":"Icon button"
    },
    {
      "type": "text",
      "id": "btn_icon",
		"label":"Font icon",
      "info":"[Get icon from here](http:\/\/simplelineicons.com\/)",
      "default": "icon-refresh"
    },
	{
      "type": "header",
      "content": "List Products"
    },
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Select collection"
    },
    {
      "type": "text",
      "id": "product_limit",
      "label": "Limit number",
      "default": "15"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Title",
          "info": "Sale products"
        },
        {
          "type": "collection",
          "id": "tab_collection",
          "label": "Choose Collection"
        },
        {
          "type": "text",
          "id": "tab_limit",
          "label": "Limit number of products",
          "default": "12"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "You May Like",
      "category": "Products"
    }
  ]
}
{% endschema %}
