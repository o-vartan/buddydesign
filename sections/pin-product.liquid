<div data-section-id="{{ section.id }}" data-section-type="pin-product" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
    <!-- Lookbook -->
<div class="lookbook">
    <div class="flex-colect">
        <div class="lookbook-img">
            <img {%if section.settings.bg_img1 == blank%}src="{{'lookbook_1.jpg'| asset_url }}" 
              {%else%}
            src="{{section.settings.bg_img1 | img_url:'master'}}"{%endif%} alt="" />  
            {% if section.blocks.size > 0 %} 
                {%- assign i = 1 -%}
                {% for block in section.blocks %}
                {% if block.type == 'pin1' %}
            <div class="lookbitem" style="{{block.settings.position_text1}}">
                <div class="{% if block.settings.pin_style_select == 's_s1'%}lookbitem_price blue
                {% elsif block.settings.pin_style_select == 's_s2'%}lookbitem_price2 red  
                {% elsif block.settings.pin_style_select == 's_s3'%} lookbitem_btn green
                {% elsif block.settings.pin_style_select == 's_s4'%} lookbitem_btn pink
                {% elsif block.settings.pin_style_select == 's_s5'%} lookbitem_btn skyblue
                {% elsif block.settings.pin_style_select == 's_s6'%} lookbitem_btn yl 
                            {%endif%}">{% if block.settings.pin_style_select == 's_s1' or block.settings.pin_style_select == 's_s2' %}<span style="color:{{block.settings.pin_range_color}}">{{block.settings.pin_text}}</span>{%endif%}</div>
                
                {% if block.settings.product_single_1 != blank %}
                    {% include 'pin-product' %}
                  {% else %}
                    {% include 'empty-pin-product' %}
                  {% endif %}
            </div>
            {%endif%}
            {%- assign i = i | plus : 1 -%}
            {%endfor%}
            {%endif%}
        </div>
    
         <div class="flex-column">
            <div class="lookbook-img">
                <img {%if section.settings.bg_img2 == blank%}src="{{'lookbook_2.jpg'| asset_url }}" 
              {%else%}
            src="{{section.settings.bg_img2 | img_url:'master'}}"{%endif%} alt="" />  
                {% if section.blocks.size > 0 %} 
                {%- assign i = 1 -%}
                {% for block in section.blocks %}
                {% if block.type == 'pin2' %}
            <div class="lookbitem" style="{{block.settings.position_text1}}">
                <div class="{% if block.settings.pin_style_select == 's_s1'%}lookbitem_price blue
                {% elsif block.settings.pin_style_select == 's_s2'%}lookbitem_price2 red  
                {% elsif block.settings.pin_style_select == 's_s3'%} lookbitem_btn green
                {% elsif block.settings.pin_style_select == 's_s4'%} lookbitem_btn pink
                {% elsif block.settings.pin_style_select == 's_s5'%} lookbitem_btn skyblue
                {% elsif block.settings.pin_style_select == 's_s6'%} lookbitem_btn yl 
                            {%endif%}">{% if block.settings.pin_style_select == 's_s1' or block.settings.pin_style_select == 's_s2' %}<span style="color:{{block.settings.pin_range_color}}">{{block.settings.pin_text}}</span>{%endif%}</div>
                
                {% if block.settings.product_single_1 != blank %}
                    {% include 'pin-product' %}
                  {% else %}
                    {% include 'empty-pin-product' %}
                  {% endif %}
            </div>
            {%endif%}
            {%- assign i = i | plus : 1 -%}
            {%endfor%}
            {%endif%}
            </div>
            <div class="lookbook-img">
<img {%if section.settings.bg_img3 == blank%}src="{{'lookbook_2.jpg'| asset_url }}" 
              {%else%}
            src="{{section.settings.bg_img3 | img_url:'master'}}"{%endif%} alt="" />  
