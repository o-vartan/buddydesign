<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  
  <div class="container banner margin_bottom_80">

    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 relative content-banner">
        <div class="img1 relative">
        <div class="text-banner v1 column-70 space_top_50">
        <h1 class="space_bot_20{% if section.settings.local_text_1 == 'center' %} text-center {% elsif section.settings.local_text_1 == 'left' %} text-left {% elsif section.settings.local_text_1 == 'right' %} text-right {% endif %} capital margin_bottom_10">{{section.settings.text-mid-1}}</h1>
        <p class="{% if section.settings.local_text_1 == 'center' %} text-center {% elsif section.settings.local_text_1 == 'left' %} text-left {% elsif section.settings.local_text_1 == 'right' %} text-right {% endif %} capital margin_bottom_10">{{section.settings.text-top-1}}</p>
        </div>
        <a href="{{section.settings.url_1}}" class="inline-block relative {% if section.settings.enable_overlay %}overlay-banner{% endif %}">
          <img src="{{section.settings.img_1 | img_url:'master'}}" class="img-responsive">
        </a>

        </div>
        <div class="img2 relative">
        <a href="{{section.settings.url_2}}" class="inline-block relative {% if section.settings.enable_overlay %}overlay-banner{% endif %}">
          <img src="{{section.settings.img_2 | img_url:'master'}}" class="img-responsive">
        </a>
        <div class="absolute text-banner column-70 ">
        <h3 class="fw-400 {% if section.settings.local_text_2 == 'center' %} text-center {% elsif section.settings.local_text_2 == 'left' %} text-left {% elsif section.settings.local_text_2 == 'right' %} text-right {% endif %} capital margin_bottom_10">{{section.settings.text-mid-2}}</h3>
        <div class="{% if section.settings.local_text_2 == 'center' %} text-center {% elsif section.settings.local_text_2 == 'left' %} text-left {% elsif section.settings.local_text_2 == 'right' %} text-right {% endif %}"><a href="{{section.settings.url_2}}" class="ciloe-btn-default inline-block fw-600">{{section.settings.btn-name}}</a></div>
        </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 relative content-banner">
        <div class="img3 relative">
        <a href="{{section.settings.url_3}}" class="inline-block relative {% if section.settings.enable_overlay %}overlay-banner{% endif %}">
          <img src="{{section.settings.img_3 | img_url:'master'}}" class="img-responsive">
        </a>
        <div class="absolute text-banner column-70 ">
        <h3 class="fw-400 {% if section.settings.local_text_3 == 'center' %} text-center {% elsif section.settings.local_text_3 == 'left' %} text-left {% elsif section.settings.local_text_3 == 'right' %} text-right {% endif %} capital margin_bottom_10">{{section.settings.text-mid-3}}</h3>
        <div class="{% if section.settings.local_text_3 == 'center' %} text-center {% elsif section.settings.local_text_3 == 'left' %} text-left {% elsif section.settings.local_text_3 == 'right' %} text-right {% endif %}"><a href="{{section.settings.url_3}}" class="ciloe-btn-default inline-block fw-600">{{section.settings.btn-name}}</a></div>
        </div>
        </div>
        <div class="img4 relative">
        <a href="{{section.settings.url_4}}" class="inline-block relative {% if section.settings.enable_overlay %}overlay-banner{% endif %}">
          <img src="{{section.settings.img_4 | img_url:'master'}}" class="img-responsive">
        </a>
        <div class="absolute text-banner column-70 ">
        <h3 class="fw-400 {% if section.settings.local_text_4 == 'center' %} text-center {% elsif section.settings.local_text_4 == 'left' %} text-left {% elsif section.settings.local_text_4 == 'right' %} text-right {% endif %} capital margin_bottom_10">{{section.settings.text-mid-4}}</h3>
