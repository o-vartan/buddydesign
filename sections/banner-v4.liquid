<div data-section-id="{{ section.id }}" data-section-type="banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<!--banner-->
  <div class="homepage-banner spc2">
      <div class="container container-240">
          <div class="row">
            	{% if section.blocks.size > 0 %} 
         							{% for block in section.blocks %}
              <div class="col-md-4 col-sm-4 col-xs-4">
                  <div class="image-bd effect-img3 plus-zoom">
                                <a href="{{block.settings.banner_url}}">
                                	<img {%if block.settings.banner_img == blank%}src="{{'h2_b1.jpg'| asset_url }}" 
                                      {%else%}
                                  	src="{{block.settings.banner_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />  
                                </a>
                              </div>
              </div>
            {% endfor %}
      							{% endif %}	 
              
          </div>
      </div>
  </div>
    
  
    <!--en-banner-->
</div>
{% schema %}
{
  "name": "Banner v3",
	"max_blocks": 3,
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
	"blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Image",
            "info": "442 x 210px Recommended"
          },
          {
          	"type": "url",
          	"id": "banner_url",
          	"label": "URL"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Banner v3",
      "category": "Banner"
    }
  ]
}
{% endschema %}