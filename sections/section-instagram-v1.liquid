          },
		  {
            "type": "url",
          	"id": "url_2",
          	"label": "Url 2",
			"default": "/collections/all"
          },
          {
            "type": "image_picker",
          	"id": "img_2",
          	"label": "Image brand 2",
			"info": "300 x 300px recommended"
          },
          {
            "type": "checkbox",
            "id": "hidden_content_2",
            "label": "Hidden content 2",
            "default": false
          }
    
]
}
],
  "presets": [
    {
      "name": "Instagram v1",
      "category": "Page Minim"
    }
  ]
}
