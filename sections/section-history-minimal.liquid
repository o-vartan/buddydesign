    },
	{
      "type": "header",
      "content": "Banner"
    },
		{
          "type": "image_picker",
          "id": "img-banner",
          "label": "Image banner"
        }
  ],


  "presets": [
    {
      "name": "History Minimal",
      "category": "Home Minimal"
    }
  ]
}
