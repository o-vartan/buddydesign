<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="collection_categories">
    <div class="container margin_bottom_10">

      <div class="row flex">

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 relative content_collection">
          <div class="row">
            {% for i in (1..2) %}
            {% capture url %}url_{{i}}{% endcapture %}
            {% capture img %}img_{{i}}{% endcapture %}
            {% capture local_text %}local_text_{{i}}{% endcapture %}
            {% capture title %}title_{{i}}{% endcapture %}
            {% capture btn_name %}btn_name_{{i}}{% endcapture %}
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 relative collection">
              <a href="{{section.settings[url]}}" class="inline-block relative {% if section.settings.enable_overlay %}overlay_banner{% endif %}  over-hidden">
                <img src="{{section.settings[img] | img_url:'master'}}" class="img-responsive hover-zoom-out">
              </a>
              <div class="absolute text_collection">
                <h4 class=" {% if section.settings[local_text] == 'center' %} text-center {% elsif section.settings[local_text] == 'left' %} text-left {% elsif section.settings[local_text] == 'right' %} text-right {% endif %}">{{section.settings[title]}}</h4>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
        <!--        -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 relative banner-collection">
          <a href="{{section.settings.url_banner}}" class="inline-block relative overlay_banner over-hidden">
            <img src="{{section.settings.img_banner | img_url:'master'}}" class="img-responsive hover-zoom-out">
          </a>
          <div class="absolute text_collection">
            <h4 class=" {% if section.settings.local_text_banner == 'center' %} text-center {% elsif section.settings.local_text_banner == 'left' %} text-left {% elsif section.settings.local_text_banner == 'right' %} text-right {% endif %}">{{section.settings.title_banner}}</h4>
            <div class=" over-hidden {% if section.settings.local_text_banner == 'center' %} text-center {% elsif section.settings.local_text_banner == 'left' %} text-left {% elsif section.settings.local_text_banner == 'right' %} text-right {% endif %}"><a href="{{section.settings.url_banner}}" class="ciloe-btn-default inline-block over-hidden relative fw-600">{{section.settings.btn_name_banner}}</a></div>
          </div>
        </div>
      </div>

    </div>
{% if section.settings.show_content_brand %}
    <div class="container brand  space_top_50">
      <div class="slick-brand">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        <div class="content-brand">
          <a href="{{block.settings.url}}">
            <img src="{{block.settings.img | img_url:'master'}}" class="img-responsive delay03">
          </a>
        </div>
        {% endfor %}
        {% endif %}
      </div>
    </div>
{% endif %}
  </div>
</div>
<style>
  .slick-brand .slick-prev, .slick-brand .slick-next{
  	display:none!important;
  }
  .collection_categories{
  	background:{{section.settings.bg_section}};
    padding-top: 115px;
    padding-bottom: 110px;
  }
  
  .brand .slick-slide img {
  	margin:auto;
        opacity: 0.3;
  }
  .brand .slick-slide img:hover{
  opacity: 1;
  }
  
     .collection_categories .banner-collection .text_collection .ciloe-btn-default:before {
    content: "\f054";
    font-family: FontAwesome;
    margin-right: 10px;
    font-size: 9px;
    display: inline-block;
    width: 30px;
    height: 30px;
    background: {{section.settings.bg_button}};
    line-height: 30px;
    text-align: center;
    border-radius: 50%;
    transition: .3s;
}
  .collection_categories .banner-collection .text_collection .ciloe-btn-default:after {
   display:none;
  }
  .collection_categories .banner-collection .text_collection a{
  color:{{section.settings.color_text}};
    font-size:13px;
  }
  .collection_categories .banner-collection .text_collection .ciloe-btn-default:hover:before{
    background:{{section.settings.bg_button_hover}};
  }
  
  .collection_categories .row.flex{
  	margin-left:-5px;
    margin-right:-5px;
  }
    .collection_categories .row.flex .row{
  	margin-left:-5px;
    margin-right:-5px;
  }
      .collection_categories .banner-collection{
    padding:5px
  }
    .collection_categories .content_collection{
    padding:5px
  }
  .collection_categories .content_collection .collection{
    padding:0 5px 5px 5px;
  }
  .collection_categories .row.flex{
  	flex-direction: row-reverse;
  }
  @media (max-width:991px){
  	.collection_categories .row.flex{
  	flex-direction: column-reverse;
  }
  }
  .collection_categories .content_collection .collection .overlay_banner:before,.collection_categories .banner-collection .overlay_banner:before{
  	content:'';
    display:inline-block;
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background:rgba(0,0,0,.7);
    opacity:0;
    transition:all .3s ease;
  }
  .collection_categories .banner-collection:hover .overlay_banner img{
    transform:scale(1.05);
  }
  .collection_categories .content_collection .collection .text_collection{
  	bottom:50px;
    left:9%;
    right:10%;
    color:{{section.settings.color_text}};
  }
  .collection_categories .banner-collection .text_collection{
  	top:11%;
    left:11%;
    right:10%;
    color:{{section.settings.color_text}};
  }
  .collection_categories .banner-collection .text_collection h4{
  	font-size:24px;
    margin-bottom:20px;
    font-weight: 400;
  }
  .collection_categories .banner-collection .text_collection .ciloe-btn-default-2{
    color:{{section.settings.color_link_banner}};
  }
  .collection_categories .banner-collection .text_collection .ciloe-btn-default-2:before{
  	background:{{section.settings.color_link_banner}};
  }
  .collection_categories .banner-collection .text_collection .ciloe-btn-default-2:hover{
    color:{{section.settings.color_hover_link_banner}};
  }
  .collection_categories .banner-collection .text_collection .ciloe-btn-default-2:hover::before{
    background:{{section.settings.color_hover_link_banner}};
  }
  .collection_categories .content_collection .collection .text_collection h4{
  	margin-bottom:15px;
    font-size:24px;
    color:{{section.settings.color_text}};
    line-height: 36px;
    font-weight: 400;
  }
  @media (max-width:567px){
    
  }
</style>
