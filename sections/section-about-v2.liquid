<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">

{% if section.settings.show_content_about %}
  <div class="container space_top_100 banner_about_v2">

    <div class="row">
     <div class="title col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <h1 class="margin_bottom_30">{{section.settings.title}}</h1>
      </div>
      <div class="content col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <div class="row">
          <div class="text_content col-lg-6 col-md-6 col-sm-6 col-xs-6 space_bot_60">
            <img src="{{section.settings.img_icon | img_url:'master'}}" class="img-responsive">
            <h4 class="margin_bottom_30 space_top_30 fw-500">{{section.settings.title_content}}</h4>
            <p class=" content">{{section.settings.des}}</p>
          </div>
                    <div class="text_content col-lg-6 col-md-6 col-sm-6 col-xs-6 space_bot_60">
            <img src="{{section.settings.img_icon2 | img_url:'master'}}" class="img-responsive">
            <h4 class="margin_bottom_30 space_top_30 fw-500">{{section.settings.title_content2}}</h4>
            <p class=" content">{{section.settings.des2}}</p>
          </div>
                    <div class="text_content col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <img src="{{section.settings.img_icon3 | img_url:'master'}}" class="img-responsive">
            <h4 class="margin_bottom_30 space_top_30 fw-500">{{section.settings.title_content3}}</h4>
            <p class=" content">{{section.settings.des3}}</p>
          </div>
                    <div class="text_content col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <img src="{{section.settings.img_icon4 | img_url:'master'}}" class="img-responsive">
            <h4 class="margin_bottom_30 space_top_30 fw-500">{{section.settings.title_content4}}</h4>
            <p class=" content">{{section.settings.des4}}</p>
          </div>
        </div>
      </div>

    </div>
  </div>
  {% endif %}
  {% if section.settings.show_content_tes %}
  <div class="container-fluid">
     <div class="row">
    <div class="bg-2 col-lg-5 col-md-5 col-sm-5 col-xs-12">
    <img src="{{section.settings.bg_v2 | img_url:'master'}}" class="img-responsive">
    </div>
    <div class="content v2 col-lg-7 col-md-7 col-sm-7 col-xs-12">
      <p class="line "></p>
      <h3 class=" content  space_bot_40">{{section.settings.des5}}</h3>
      <img src="{{section.settings.img_icon5 | img_url:'master'}}" class="img-responsive inline-block space_right_20"><span class="fw-500">{{section.settings.text2}}</span>
    </div>
    </div>
  </div>
  {% endif %}
</div>
<style>
  .bg-2{
  	padding-left:0;
  }
  .content.v2{  	
    padding-left:3%;
  }
  .content.v2 .line{
    padding-top:30px;
    }
  .content.v2 h3{
  color:{{section.settings.color_content2}};
  }
  .banner_about_v2 .text_content p {
  	line-height:30px;
    color:{{section.settings.color_des}};
  }
  @media (max-width:768px){
    .content.v2{
    	padding-bottom:30px;
    }
  }
  @media (min-width:1400px){
    .content.v2 .line{
    padding-top:140px;
    }
    .content.v2 h3{
    padding-top:140px;
    }
    .content.v2{  	
    padding-left:4.2%;
  }
  }
    @media (min-width:1025px){
      .content.v2 h3{
      line-height:45px;
      }
          .content.v2 .line{
    padding-top:70px;
    }
    .content.v2 h3{
    padding-top:70px;
    }
      .banner_about_v2 .text_content{
      	padding-left:122px;
      }
      .banner_about_v2 .title h1{
      	font-size:48px;
      }
  }
  .banner_about_v2 .title h1{
  	color:{{section.settings.color_title}};
  }
  .banner_about_v2 .title h1 span{
   color:#000;
  }
    .banner_about_v2 .title h1 span.v2{
   color:#3e976b;
  }
</style>
