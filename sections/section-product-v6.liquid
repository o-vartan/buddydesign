<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<div class="container-1300 product-v4 space_top_100 space_bot_100">  
    <div class="ciloe-title-section margin_bottom_70 container relative text-center">
      <p class="fz-12 uppercase">{{section.settings.des}}</p>
    <h2 class="margin_top_20  fw-600">{{section.settings.title}}</h2>
</div>
  <div class="container  trending_classic">
    <div class="row" id="fade-it-1">
    {% assign products_limit = section.settings.limit %}
    {% assign col = section.settings.collection %}
      {%- assign i = 2 -%}
    {% for product in collections[col].products limit: products_limit %}
    <div class=" col-md-3 col-sm-4 col-xs-6 " id="fade-it-{{i}}">
      {% include 'ciloe-product' %}
    </div>
      {%- assign i = i | plus : 1 -%}
    {% endfor %}
    </div>
        {% if section.settings.enable_btn %}
    <div class="text-center">
    <a href="{{section.settings.url}}" class="delay03  relative btn-section">{{section.settings.btn_name}}</a>
    </div>
    {% endif %}
  </div>
</div>
</div>
<style>
  @media (max-width: 1024px) {
  .col-md-3:nth-child(4n+1){
  clear:inherit;
  }}
   @media (max-width: 768px) {
    .col-sm-4:nth-child(3n+1){
    clear:inherit;
    }
    .product-v4 .col-xs-6:nth-child(2n+1){
      clear: left;
      }
  }
  .product-v4{
   background:{{section.settings.bg-section}}
  }
</style>
{% schema %}
{
  "name": "Product v4",
  "settings": [
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
	{
      "type": "color",
      "id": "bg-section",
      "label": "Background section",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Popular Products"
    },
	{
      "type": "text",
      "id": "des",
      "label": "Des",
      "default": "Come clean us now"
    },
	{
      "type": "checkbox",
      "id": "enable_btn",
      "label": "Enable button",
      "default": true
    },
	{
      "type": "url",
      "id": "url",
      "label": "URL button",
      "default": "/collections/all"
    },
	{
      "type": "text",
      "id": "btn_name",
      "label": "button name",
      "default": "All Products"
    },
	{
      "type": "text",
      "id": "limit",
      "label": "Limit product",
      "default": "8"
    },
	{
      "type": "collection",
      "id": "collection",
      "label": "Chose collection"
    }
  ],
  "presets": [
    {
      "name": "Product v4",
      "category": "Page Minim"
    }
  ]
}
{% endschema %}