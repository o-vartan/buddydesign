<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<!--slide-->
  <div class="container-fluid slider-home-classic margin_bottom_50">
    <div class="row">
      	<div class="js-slider-home-classic">
      {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
      	<div class="content-slider">
          <div class="relative">
            {% if block.settings.bg-img == blank %}
          	<img src="{{'slider-classic-1.jpg' | asset_url}}" class="img-responsive img-bg-slider">
            {% else %}
            <img src="{{block.settings.bg-img | img_url:'master'}}" class="img-responsive img-bg-slider">
            {% endif %}
            
            <div class="absolute text-slider {% if block.settings.local_text == 'center' %} text-center {% elsif block.settings.local_text == 'left' %} text-left {% elsif block.settings.local_text == 'right' %} text-right {% endif %}">
              
              <p class="text-animate-1 lt-3 margin_bottom_20">{{block.settings.title-1}}</p>
              {% if block.settings.enable_line %}
              <div class="over-hidden">
                <p class="line_slider margin_bottom_20"></p>
              </div>
              {% endif %}
              <h1 class="text-animate-2 margin_bottom_20">{{block.settings.title-2}}</h1>
             
              
              <h1 class="text-animate-3 margin_bottom_50">{{block.settings.title-3}}</h1>
              
              <p class="text-animate-1 margin_bottom_50">{{block.settings.title-4}}</p>
              
              <div class="btn-slider">
              <a class="{% if block.settings.style_btn == 'style_1' %} btn-ciloe {% else %} btn-ciloe-2 {% endif %} delay03 fz-12 inline-block" href="{{block.settings.url-btn}}" >{{block.settings.btn-name}}</a>
              </div>
            </div>
            
            <div class="absolute img-slider-1">
              {% if block.settings.img-slider-1 != blank %}
            	<img src="{{block.settings.img-slider-1 | img_url:'master'}}" class="img-animate-1 img-responsive">
              {% endif %}
            </div>
            {% if block.settings.enable_img %}
            <div class="absolute img-slider-2">
              
              {% if block.settings.img-slider-2 == blank %}
            	<img src="{{'slider-classic-1-1.png' | asset_url}}" class="img-animate-2 img-responsive">
              {% else %}
            	<img src="{{block.settings.img-slider-2 | img_url:'master'}}" class="img-animate-2 img-responsive">
              {% endif %}
              
            </div>
            {% endif %}
            {% if block.settings.enable-text-right %}
            <div class="absolute text-slider-right hidden-xs">
              <p><span class="lt-3">{{block.settings.text-right}}</span></p>
            </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
      {% endif %}
        </div>
    </div>
  </div>
<!--endslide-->
</div>
<style>
  {% if section.settings.content_reverse %}
  .slider-home-classic .text-slider h1,.slider-home-classic .text-slider p{
    color:{{section.settings.color_text_slide}} !important;
  }
  .slider-home-classic .text-slider a{
    color:{{section.settings.color_text_slide}};
    border-color:{{section.settings.color_text_slide}};
  }
  .slider-home-classic .text-slider a:hover{
    color:{{section.settings.color_text_slide}};
    border-color:{{section.settings.color_hover_text_slide}};
  }
  .slider-home-classic .img-slider-1{
    bottom:0;
    left: 15%;
    
  }
  .slider-home-classic .img-slider-2{
    bottom:0;
    left: 25%;
    
  }
  .slider-home-classic .text-slider{
    bottom:40%;
    right:10%;
    left:unset;
    z-index: 2;
  }
  @media (max-width: 1400px){
  .slider-home-classic .text-slider{
  	bottom:18%;
  }
  }
  @media (max-width: 567px){
  .slider-home-classic .text-slider{
    right: 5%;
    bottom:15%;
  }
    .slider-home-classic .text-slider .text-animate-1{
    	margin-bottom:10px;
    }
    .slider-home-classic .text-slider .lt-3{
    	letter-spacing:1px;
    }
  }
  {% endif %}
  .slider-home-classic .text-slider .line_slider{
  	height: 60px;
    width: 1px;
    background: #8c8f9e;
    margin: 0 auto;
    transform: translateY(-85px);
    transition: all 1s ease;
  }
  @media (max-width: 1400px){
  .slider-home-classic .text-slider .line_slider{
  	height: 30px;
  }
  }
  
  .slider-home-classic .slick-current.slick-active .text-slider .line_slider{
    transform: translateY(0);
  }
 
  {% if section.settings.hidden_dot %}
  .slider-home-classic .js-slider-home-classic .slick-dots{
  	display:none !important;
  }
  {% endif %}
  @media (max-width:1400px){
  .slider-home-classic .img-slider-1 img{
    width:{{section.settings.width_img_14}}%;
    float:{{section.settings.float_img_14}};
  }
  .slider-home-classic .img-slider-2 img{
  	width:{{section.settings.width_img_24}}%;
    float:{{section.settings.float_img_24}};
  }
  }
  @media (max-width:1024px){
  .slider-home-classic .img-slider-1 img{
    width:{{section.settings.width_img_1}}%;
    float:{{section.settings.float_img_1}};
  }
  .slider-home-classic .img-slider-2 img{
  	width:{{section.settings.width_img_2}}%;
    float:{{section.settings.float_img_2}};
  }
  }
  @media (max-width:768px){
  .slider-home-classic .img-slider-1 img{
    width:{{section.settings.width_img_1_ipad}}%;
    float:{{section.settings.float_img_1_ipad}};
  }
  .slider-home-classic .img-slider-2 img{
  	width:{{section.settings.width_img_2_ipad}}%;
    float:{{section.settings.float_img_2_ipad}};
  }
  }
  .btn-ciloe{
  	background:{{section.settings.bg-btn}}
  }
  .btn-ciloe:hover{
  	background:{{section.settings.bg-btn-hover}}
  }
  {% if section.settings.enable_prev %}
  .js-slider-home-classic .slick-next{
  	display:none !important;
  }
  .js-slider-home-classic .slick-prev{
  	display:none !important;
  }
  {% endif %}
  .js-slider-home-classic .slick-prev{
  	left: 15px;
  }
</style>
