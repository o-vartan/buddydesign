<div data-section-id="{{ section.id }}" data-section-type="slide-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  
  <div class="container margin_bottom_120 margin_top_120">
    <div class="newletter">
     <div class="flex v1"> 
    <h1 class="title-newletter {% if section.settings.text == 'left' %} text-left {% elsif section.settings.text == 'right' %} text-right {% elsif section.settings.text == 'center' %} text-center {% endif %}">{{section.settings.title}}</h1>
    <p class="des-newletter fz-12 uppercase {% if section.settings.text == 'left' %} text-left {% elsif section.settings.text == 'right' %} text-right {% elsif section.settings.text == 'center' %} text-center {% endif %}">{{section.settings.des}}</p>
      </div>
       <div class="form-newletter flex center">
      <form action="{{ form_action }}" class="form-group relative flex " method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
        <input type="email" name="EMAIL" class="form-control" placeholder="Enter your email here" value="{% if customer %}{{ customer.email }}{% endif %}">
        <button type="submit" class="uppercase btn-animate-ciloe2  absolute">{{section.settings.btn}}</button>
      </form>
    </div>
  </div>
  </div>

</div>
<style>
  .newletter{
    background:{{section.settings.bg}};
    max-width:770px;
    margin: auto;
  }
  .newletter .form-newletter form{
  	width:100%;
  }
  .newletter .title-newletter{
    width:50%;
    margin-bottom:25px;
    color:{{section.settings.color_title}};
    font-size:{{section.settings.font_size_title}}px;
  }
  .newletter .des-newletter{
    margin-bottom:70px;
    color:{{section.settings.color_des}};
        letter-spacing: 1px;
    width: 50%;
        line-height: 22px;
    font-weight: 300;
  }
  .newletter .form-newletter input{
  	border:0;
    border-bottom:2px solid {{section.settings.color_border}};
    line-height:40px;
    padding-left: 0;
    font-size: 18px;
    font-weight: 300;
    height:40px;
  }
  .btn-animate-ciloe2:after{
  	display:none;
  }
  .newletter .form-newletter button{
  	font-weight:600;
    color:{{section.settings.color_submit}};
    font-size:14px;
    letter-spacing: 0.5px;
    right: 0;
    top: 7px;
  }
</style>
{% schema %}
{
  "name": "Newletter v1",
  "settings": [
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
	{
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Newletters"
    },
	{
      "type": "range",
      "id": "font_size_title",
      "label": "Font size Title",
      "default": 30,
	  "min":       14,
      "max":       50,
      "step":      1,
      "unit":      "px"
    },
	{
      "type": "color",
      "id": "color_title",
      "label": "Color Title",
      "default": "#000"
    },
    {
      "type": "textarea",
      "id": "des",
      "label": "Description",
      "default": "Get 20% off on your first order by signing up to our newsletter. You can unsubscribe anytime"
    },
	{
      "type": "color",
      "id": "color_des",
      "label": "Color Description",
      "default": "#999999"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button name",
      "default": "subscribe"
    },
	{
      "type": "color",
      "id": "color_submit",
      "label": "Color button submit",
      "default": "#0D4C82"
    },
	{
      "type": "header",
      "content": "Input form"
    },
	{
      "type": "color",
      "id": "color_border",
      "label": "Color line bottom input",
      "default": "#ececec"
    }
	
  ],

  "presets": [
    {
      "name": "Newletter v1",
      "category": "Page Minim"
    }
  ]
}
{% endschema %}