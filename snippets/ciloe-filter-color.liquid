<div class="filter margin_bottom_30 space_bot_30 border-bot filter-tag">
  <div class="flex margin_bottom_20">
    <h4 class="fz-12 widget_title lt-2">{{section.settings.title_color}}</h4>
  </div>
  <ul>
    {% assign tags = section.settings.shop_by_color_list_tags | split: ',' %}

    {% for t in tags %}
    {% assign tag = t | strip %}
    {% assign tag_value = tag | handleize %}
    <li class="cat-item{% if current_tags contains tag %} current-cat{% endif %} inline-block">
      <input class="hidden" type="checkbox" value="{{ tag_value | split: '|' | first }}" {% if current_tags contains tag %}checked{% endif %}/>
      <a href="javascript:void(0)" title="{{tag}}">
        <span class="link_color">
          <span class="ciloe_filter_color" style="background:{{tag}};"></span>
        </span>
      </a>
      {% endfor %}
  </ul>
</div>