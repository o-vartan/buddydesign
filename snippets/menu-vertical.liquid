<!-- begin site-nav -->
{% assign main_menu = section.settings.menu_ver2%}
<ul class="vertical-group">
  {% for link in linklists[main_menu].links %}
  {% assign item = link.title | downcase %}
  {% assign child_list_handle = link.title | handleize %}
  
  {% capture megamenu_1 %}verticalmegamenu_1_parent{% endcapture %}
  {% capture megamenu_2 %}verticalmegamenu_2_parent{% endcapture %}
  {% capture megamenu_3 %}verticalmegamenu_3_parent{% endcapture %}
  {% capture megamenu_4 %}verticalmegamenu_4_parent{% endcapture %}
  {% capture megamenu_5 %}verticalmegamenu_5_parent{% endcapture %}
  
  {% if settings[megamenu_1] == item or settings[megamenu_2] == item or settings[megamenu_3] == item or settings[megamenu_4] == item or settings[megamenu_5] == item %}
    {% for i in (1..5) %}
    {%capture megamenu%}verticalmegamenu_{{i}}_parent{%endcapture%}

    {% if settings[megamenu] == item %}
    {% capture _mega_style_select %}verticalmegamenu_{{i}}_select{% endcapture %}
    {% capture _mega_bg %}verticalmegamenu_{{i}}_bg{% endcapture %}
    {% if settings[_mega_style_select] == "v_s1" %}
    <li class="vertical-item level1 vertical-drop">
      {% if link.title contains '[' %}
      {%- assign label  = link.title | split: '[' | last  | split: ']' | first -%} 
      {%- assign bgc  = link.title | split: '(' | last  | split: ')' | first -%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }} <span class="h-ribbon e-red mg-l10" style="background:{{bgc}}">{{label}}</span></a>
      {%else%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }}</a>
      {%endif%}
      <div class="menu-level-1 dropdown-menu vertical-menu v2 pd2 style1" style="background-image: url({% if settings[_mega_bg] == blank %}{{'home-bg.jpg'| asset_url }}{% else %}{{settings[_mega_bg]|img_url:'master'}}{% endif %});">
        <ul class="level1">	
          {% for j in (1..2) %}
          <li class="level2 {% if forloop.index == 1 %} col-md-5 {%else%} col-md-7 {%endif%}">
            {% capture mega_title %}verticalmegamenu_{{ i }}_column_{{ j }}_title_1{% endcapture %}
            {% capture mega_col %}verticalmegamenu_{{ i }}_column_{{ j }}_menu_1{% endcapture %}
            {% if forloop.index == 2 %}
            <a>{{ settings[mega_title] }}</a>
            <ul class="menu-level-2">
              {% for link in linklists[settings[mega_col]].links %}
              <li class="level3"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
            {% else %}
            {% for k in (1..2) %}
            {% capture mega_title %}verticalmegamenu_{{ i }}_column_{{ j }}_title_{{k}}{% endcapture %}
            {% capture mega_col %}verticalmegamenu_{{ i }}_column_{{ j }}_menu_{{k}}{% endcapture %}
            {% capture mega_image %}verticalmegamenu_{{ i }}_column_{{ j }}_image.jpg{% endcapture %}
            {% capture mega_image_url %}verticalmegamenu_{{ i }}_column_{{ j }}_image_url{% endcapture %}
            <a>{{ settings[mega_title] }}</a>
            <ul class="menu-level-2">
              {% for link in linklists[settings[mega_col]].links %}
              <li class="level3"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
            {% endfor %}
            {% endif %}

            {% endfor %}
          </li>


        </ul>

      </div>
    </li>
    {% endif %}
    {% if settings[_mega_style_select] == "v_s2" %}
    <li class="vertical-item level1 vertical-drop">
      {% if link.title contains '[' %}
      {%- assign label  = link.title | split: '[' | last  | split: ']' | first -%}  
      {%- assign bgc  = link.title | split: '(' | last  | split: ')' | first -%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }} <span class="h-ribbon e-red mg-l10" style="background:{{bgc}}">{{label}}</span></a>
      {%else%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }}</a>
      {%endif%}                    <div class="menu-level-1 dropdown-menu vertical-menu v2 pd2 style1" style="background-image: url({% if settings[_mega_bg] == blank %}{{'home-bg.jpg'| asset_url }}{% else %}{{settings[_mega_bg]|img_url:'master'}}{% endif %});">
      <ul class="level1">
        {% for j in (1..3) %}

        <div class="level2 col-md-4">

          {% capture mega_title %}verticalmegamenu_{{ i }}_column_{{ j }}_title{% endcapture %}
          {% capture mega_col %}verticalmegamenu_{{ i }}_column_{{ j }}_menu{% endcapture %}
          <a href="#">{{ settings[mega_title] }}</a>
          <ul class="menu-level-2">
            {% for link in linklists[settings[mega_col]].links %}
            <li class="level3"><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>

        </div>

        {% endfor %}
      </ul>
      </div>
    </li>	
    {%endif%}
    {% if settings[_mega_style_select] == "v_s3" %}
    <li class="vertical-item level1 vertical-drop"><a href="{{ link.url }}">{{ link.title }}</a>
      <div class="menu-level-1 dropdown-menu vertical-menu v2 pd2 style1" style="background-image: url({% if settings[_mega_bg] == blank %}{{'home-bg.jpg'| asset_url }}{% else %}{{settings[_mega_bg]|img_url:'master'}}{% endif %});">
        <ul class="level1">
          {% for j in (1..2) %}
          <li class="level2 {% if forloop.index == 1 %} col-md-4 {%else%} col-md-8 {%endif%}">
            {% for k in (1..2) %}
            {% capture mega_title %}verticalmegamenu_{{ i }}_column_{{ j }}_title_{{k}}{% endcapture %}
            {% capture mega_col %}verticalmegamenu_{{ i }}_column_{{ j }}_menu_{{k}}{% endcapture %}
            {% capture mega_image %}verticalmegamenu_{{ i }}_column_{{ j }}_image.jpg{% endcapture %}
            {% capture mega_image_url %}verticalmegamenu_{{ i }}_column_{{ j }}_image_url{% endcapture %}
            <a href="#">{{ settings[mega_title] }}</a>
            <ul class="menu-level-2">
              {% for link in linklists[settings[mega_col]].links %}
              <li class="level3"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
            {% endfor %}
          </li>

          {% endfor %}
        </ul>
      </div>
    </li>
    {% endif %}
    {% if settings[_mega_style_select] == "v_s4" %}
    <li class="vertical-item level1 vertical-drop"><a href="{{ link.url }}">{{ link.title }}</a>
      <div class="menu-level-1 dropdown-menu vertical-menu v2 pd3 style1" style="background-image: url({% if settings[_mega_bg] == blank %}{{'home-bg.jpg'| asset_url }}{% else %}{{settings[_mega_bg]|img_url:'master'}}{% endif %});">
        <ul class="level1">
          {% for j in (1..2) %}
          <li class="level2 col-md-6">

            {% capture mega_title %}verticalmegamenu_{{ i }}_column_{{ j }}_title{% endcapture %}
            {% capture mega_col %}verticalmegamenu_{{ i }}_column_{{ j }}_menu{% endcapture %}

            <a href="#">{{ settings[mega_title] }}</a>
            <ul class="menu-level-2">
              {% for link in linklists[settings[mega_col]].links %}
              <li class="level3"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>

          </li>

          {% endfor %}
        </ul>
      </div>
    </li>
    {% endif %}

    {% if settings[_mega_style_select] == "v_s5" %}
    <li class="vertical-item level1 vertical-drop mega-parent"><a href="{{ link.url }}">{{ link.title }}</a>
      <div class="menu-level-1 dropdown-menu vertical-menu v2 pd">
        <div class="row">
          {% for collection in collections %}
          {% include 'menu-collection-grid-item'%}
          {% endfor %}
        </div>
      </div>
    </li>
    {% endif %}

    {%endif%}
    {% endfor %}
  
  {% else %}
  
    {% if linklists[child_list_handle].links != blank %}
    <li class="vertical-item level1 vertical-drop">
      {% if link.title contains '[' %}
      {%- assign label  = link.title | split: '[' | last  | split: ']' | first -%} 
      {%- assign bgc  = link.title | split: '(' | last  | split: ')' | first -%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }} <span class="h-ribbon e-red mg-l10" style="background:{{bgc}}">{{label}}</span></a>
      {%else%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }}</a>
      {%endif%}
      <div class="menu-level-1 dropdown-menu vertical-menu">
        <ul class="vertical-menu1">
          {% for childlink in linklists[child_list_handle].links %}
          <li{% if childlink.active %} class="level2"{% endif %}>
            <a href="{{ childlink.url }}" class="">{{ childlink.title | escape }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </li>
    {% else %}  
    <li class="vertical-item level1 mega-parent" {% if link.active %}class="dropdown"{% endif %}>
      {% if link.title contains '[' %}
      {%- assign label  = link.title | split: '[' | last  | split: ']' | first -%}  
      {%- assign bgc  = link.title | split: '(' | last  | split: ')' | first -%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }} <span class="h-ribbon e-red mg-l10" style="background:{{bgc}}">{{label}}</span></a>
      {%else%}
      <a href="{{ link.url }}" title="{{link.title | split: '[' | first }}">{{link.title | split: '[' | first }}</a>
      {%endif%}
    </li>
    {% endif %}
  
  {% endif %}
  {% endfor %}
</ul>
<!-- //site-nav -->