<!-- /snippets/socialshare.liquid -->
{% if template contains 'article' or template contains 'blog' %}
{% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
{% capture shareTitle %}{{ article.title | url_param_escape }}{% endcapture %}
{% elsif template contains 'product' or template contains 'collection' %}
{% capture permalinkURL %}{{ shop.url }}{{ product.url }}{% endcapture %}
{% capture shareTitle %}{{ product.title | url_param_escape }}{% endcapture %}
{% elsif template == 'password' %}
{% capture permalinkURL %}{{ shop.url }}{% endcapture %}
{% capture shareTitle %}{% unless shop.description == blank %}{{ shop.description | url_param_escape }}{% else %}{{ shop.name | url_param_escape }}{% endunless %}{% endcapture %}
{% endif %}

{% comment %}
Share button styles are:
* is-clean
* normal
{% endcomment %}

{% assign shareButtonStyle = 'is-clean' %}

<ul class="social-share flex center">
  <li><a href="//twitter.com/share?text={{ shareTitle }}&amp;url={{ permalinkURL }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
  <li><a href="//www.facebook.com/sharer.php?u={{ permalinkURL }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
  <li><a target="_blank" href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media=http:{% if template contains 'product' %}{{ product | img_url: '1024x1024' }}{% else %}{{ article | img_url: '1024x1024' }}{% endif %}&amp;description={{ shareTitle }}"><i class="fa fa-pinterest-p"></i></a></li>
  <li>
    <a href="//plus.google.com/share?url={{ permalinkURL }}" target="_blank" class="twitter-share-link" title="Google Plus">
      <i class="fa fa-envelope"></i>
    </a> 
  </li>
</ul>